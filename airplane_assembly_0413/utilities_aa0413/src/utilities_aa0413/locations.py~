def get_location_names():
    names = []

    for l in slocations:
        names.append(l['name'])

    return names


def get_location_by_name(lname):

    for l in slocations:
        if l['name'] == lname :
             return l['position'], l['orientation']

    return None, None


def is_workspace_location(lname):
    
    for l in workspace:
       if lname == l
          return True

    return False














