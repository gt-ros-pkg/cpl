<launch>
    <include file="$(find openni_launch)/launch/openni.launch">
      <arg name="camera"               value="kinect0" /> 
      <arg name="device_id"            value="2@0" /> 
      <arg name="publish_tf"           value="false" /> 
    </include>
    <param name="/kinect0/driver/depth_ir_offset_x" value="-5.8" />
    <param name="/kinect0/driver/depth_ir_offset_y" value="2.4" /> 
    <node pkg="tf" type="static_transform_publisher" name="kinect0_calibration"
          args="0.433613 -0.406085 1.375427 0.486451 0.752414 -0.376964 -0.234811 /base_link /kinect0_calibration_frame 10" />  
    <node pkg="tf" type="static_transform_publisher" name="kinect0_calibration_offset"
          args="-0.045 0.0 0.0 0.5 -0.5 0.5 0.5 /kinect0_calibration_frame /kinect0_link 10" />  


  <arg name="pi/2" value="1.5707963267948966" />
  <arg name="optical_rotate" value="0 0 0 -$(arg pi/2) 0 -$(arg pi/2)" />

  <node pkg="tf" type="static_transform_publisher" name="kinect0_base_link"
        args="0 -0.02  0 0 0 0  /kinect0_link /kinect0_depth_frame 10" />  
  <node pkg="tf" type="static_transform_publisher" name="kinect0_base_link1"
        args="0 -0.045 0 0 0 0  /kinect0_link /kinect0_rgb_frame 10" />  
  <node pkg="tf" type="static_transform_publisher" name="kinect0_base_link2"
        args="$(arg optical_rotate) /kinect0_depth_frame /kinect0_depth_optical_frame  10" />  
  <node pkg="tf" type="static_transform_publisher" name="kinect0_base_link3"
        args="$(arg optical_rotate) /kinect0_rgb_frame /kinect0_rgb_optical_frame 10" />  

</launch>
